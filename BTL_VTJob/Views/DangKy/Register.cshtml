@model BTL_VTJob.ViewModel.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register</h2>


<hr />
<div class="container-md">
<div class="row justify-content-center">
        <div class="col-md-9 col-lg-6 col-xl-7 d-flex align-items-center order-2 order-lg-2">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image" />

    </div>
        <div class="col-md-9 col-lg-6 col-xl-5 order-1 order-lg-1">
            <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Hoten" class="control-label"></label>
                <input asp-for="Hoten" class="form-control" />
                <span asp-validation-for="Hoten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDT" class="control-label"></label>
                <input asp-for="SoDT" class="form-control" />
                <span asp-validation-for="SoDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" class="form-control" type="password" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhauXacNhan" class="control-label"></label>
                <input asp-for="MatKhauXacNhan" class="form-control" type="password" />
                <span asp-validation-for="MatKhauXacNhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                    Bạn là nhà doanh nghiệp?<br />
                    @Html.DropDownListFor(model=>model.isProvider ,new SelectList(Enum.GetValues(typeof(BTL_VTJob.ViewModel.RegisterVM.Quyen))),null,new {
                    htmlAttributes=new{
                    @type="select",
                    @id= "isProvider",
                    }
                    })
                    <span asp-validation-for="isProvider" class="text-danger"></span>
            </div>
            <div class="form-group" id="TenCTProvider">
                <label asp-for="@Model.InfoProvider.TenCT" class="control-label"></label>
                <input asp-for="@Model.InfoProvider.TenCT" class="form-control" />
                <span asp-validation-for="@Model.InfoProvider.TenCT" class="text-danger"></span>
            </div>
            <div class="form-group" id="MoTaProvider">
                <label asp-for="@Model.InfoProvider.MoTa" class="control-label"></label>
                <input asp-for="@Model.InfoProvider.MoTa" class="form-control" />
                <span asp-validation-for="@Model.InfoProvider.MoTa" class="text-danger"></span>
            </div>
            <div class="form-group" id="DiaChiProvider">
                <label asp-for="@Model.InfoProvider.DiaChi" class="control-label"></label>
                <input asp-for="@Model.InfoProvider.DiaChi" class="form-control" />
                <span asp-validation-for="@Model.InfoProvider.DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group" id="AnhProvider">
                <label asp-for="@Model.InfoProvider.Anh" class="control-label"></label>
                    <input type="file" name="file" class="form-control-file" id="exampleFormControlFile1">
                    <span asp-validation-for="@Model.InfoProvider.Anh" class="text-danger"></span>
            </div>
            <div class="text-center">
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 m-2">
                    <button type="submit" class="btn btn-primary btn-lg" style="width:310px">Register</button>
                </div>
                OR
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 m-2">
                    <button  class="btn btn-primary btn-lg" style="width:310px">Login</button>
                </div>
                </div>
           @* <div class="form-group m-2 text-center">
                <input type="submit" value="ĐĂNG KÝ" class="btn btn-primary w-75" />
            </div>*@
        </form>
    </div>
</div>

<div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<a href="~/lib/jquery/dist/jquery.min.map"></a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        if ($('#isProvider').val() == "User") {
            $('#TenCTProvider').hide();
            $('#AnhProvider').hide();
            $('#MoTaProvider').hide();
            $('#DiaChiProvider').hide();
        }
        else {
            $('#TenCTProvider').show();
            $('#MoTaProvider').show();
            $('#DiaChiProvider').show();
            $('#AnhProvider').show();
        }

        $('#isProvider').change(function () {
            var selectedValue = jQuery(this).val();

            if (selectedValue != "User") {

                $('#TenCTProvider').show();
                $('#MoTaProvider').show();
                $('#DiaChiProvider').show();
                $('#AnhProvider').show();

            }
            else {

                $('#TenCTProvider').hide();
                $('#MoTaProvider').hide();
                $('#DiaChiProvider').hide();
                $('#AnhProvider').hide();
            }
        });
    })

</script>